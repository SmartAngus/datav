{
    "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
    },
    "paths": {
      "@topology/core": ["packages/core"],
      "@topology/core/*": ["packages/core/src/*"],
      "@topology/flow-diagram": ["packages/flow-diagram"],
      "@topology/activity-diagram": ["packages/activity-diagram"],
      "@topology/class-diagram": ["packages/class-diagram"],
      "@topology/sequence-diagram": ["packages/sequence-diagram"],
      "@topology/chart-diagram": ["packages/chart-diagram"],
      "@topology/layout": ["packages/layout"]
    },
  "include": ["packages/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
  